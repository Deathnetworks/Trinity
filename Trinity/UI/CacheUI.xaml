                        <!--<GridViewColumn Width="Auto" Header="ActorSNO" DisplayMemberBinding="{Binding ActorSNO, Mode=OneWay}" CellTemplate="{StaticResource listViewTextCellTemplate}" />-->
                    </ut:AutoSizedGridView>              
                </ListView.View>
