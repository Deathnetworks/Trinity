                    </ComboBox>
                    <ComboBox Grid.Row="3" Grid.Column="2" SelectedValue="{Binding Path=Pickup.JewelryYellowLevel}" SelectedValuePath="Tag" Margin="8,2">
                        <ComboBoxItem Content="None" Tag="0" />
                        <ComboBoxItem Content="1+" Tag="1" />
